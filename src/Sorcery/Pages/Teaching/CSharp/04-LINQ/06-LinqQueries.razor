@page "/teaching/csharp/4-linq/6-linq-queries"
@inject CourseBook CourseBook;

@{
    var course = CourseBook.CSharpCourse["linq"]["linq-queries"];
}

<CourseSection Section="@course">
    <MudText GutterBottom="true">
        Next one in <MudLink Href="@GitHub.CSharpNotebooks" Target="_blank">the notebooks repository</MudLink>:
        <Highlight>@($"{course.Module.Id}-{course.Module.RouteName}/{course.Id}-{course.RouteName}.dib")</Highlight>.
    </MudText>
    <MudText Typo="Typo.h2" Class="mx-auto py-2">In this section we'll cover</MudText>
    <MudList>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Basic LINQ operators &ndash; <Code>Select</Code>, <Code>Where</Code>, <Code>OrderBy</Code>, <Code>GroupBy</Code>.
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Aggregation &ndash; <Code>Count</Code>, <Code>Sum</Code>, <Code>Average</Code>, <Code>Max</Code>, <Code>Min</Code>, <Code>Aggregate</Code>
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Predicates &ndash; <Code>All</Code>, <Code>Any</Code>, <Code>First</Code>, <Code>Last</Code>, <Code>Single</Code>
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Combining sequences &ndash; <Code>Concat</Code>, <Code>SelectMany</Code>, <Code>Zip</Code>
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Set operations &ndash; <Code>Contains</Code>, <Code>Distinct</Code>, <Code>Union</Code>, <Code>Except</Code>, <Code>Intersect</Code>
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Construction operations &ndash; <Code>Empty</Code>, <Code>Range</Code>, <Code>Repeat</Code>
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Collecting &ndash; <Code>ToList</Code>, <Code>ToArray</Code>, <Code>ToHashSet</Code>, <Code>ToDictionary</Code>
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Deferred execution.
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Multiple enumeration.
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            Query syntax, <Code>Join</Code>.
        </MudListItem>
        <MudListItem Icon="@Icons.Filled.ChevronRight">
            MoreLINQ.
        </MudListItem>
    </MudList>
    <Resources Links=@(new [] {
        ("https://docs.microsoft.com/en-us/dotnet/csharp/programming-guide/concepts/linq/", "Language Integrated Query (LINQ) (C# Programming Guide)"),
        ("https://docs.microsoft.com/en-us/dotnet/csharp/linq/write-linq-queries", "Write LINQ queries in C#"),
        ("https://docs.microsoft.com/en-us/samples/dotnet/try-samples/101-linq-samples/", "101 LINQ samples"),
        ("https://docs.microsoft.com/en-us/dotnet/csharp/tutorials/working-with-linq", "Working with LINQ"),
        ("https://codeblog.jonskeet.uk/2011/02/23/reimplementing-linq-to-objects-part-45-conclusion-and-list-of-posts/", "Jon Skeet reimplementing LINQ in way too many blog posts"),
        ("https://morelinq.github.io/", "MoreLINQ"),
    })/>
</CourseSection>

