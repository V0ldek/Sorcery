@page "/teaching/csharp/0-basics/5-arrays"
@inject CourseBook CourseBook;

@{
    var course = CourseBook.CSharpCourse["basics"]["arrays"];
}

<CourseSection Section="@CourseBook.CSharpCourse["basics"]["arrays"]">
    <Paragraph>
        Continuing with <Link Href="@GitHub.CSharpNotebooks" Target="_blank">the notebooks repository</Link>
        go through the next notebook, <Highlight>@($"{course.Module.Id}-{course.Module.RouteName}/{course.Id}-{course.RouteName}.dib")</Highlight>, in VS Code.
    </Paragraph>
    <Header2>In this section we'll cover</Header2>
    <MudList>
        <MudListItem Icon="@Icons.Material.Filled.ChevronRight">
            <MudText>
                Declaring and initialising arrays.
            </MudText>
        </MudListItem>
        <MudListItem Icon="@Icons.Material.Filled.ChevronRight">
            <MudText>
                Indexing into arrays with <Code>Index</Code> and <Code>Range</Code>.
            </MudText>
        </MudListItem>
        <MudListItem Icon="@Icons.Material.Filled.ChevronRight">
            <MudText>
                Very basics of a <Code>foreach</Code> loop.
            </MudText>
        </MudListItem>
        <MudListItem Icon="@Icons.Material.Filled.ChevronRight">
            <MudText>
                Multidimensional and jagged arrays.
            </MudText>
        </MudListItem>
    </MudList>

    <Resources Links=@(new [] {
        ("https://docs.microsoft.com/en-us/dotnet/csharp/programming-guide/arrays/", "Arrays (C# Programming Guide)"),
        ("https://stackoverflow.com/questions/597720/what-are-the-differences-between-a-multidimensional-array-and-an-array-of-arrays",
            "What are the differences between a multidimensional array and an array of arrays in C#? (StackOverflow)"),
    })/>
</CourseSection>

