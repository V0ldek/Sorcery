@using Sorcery.ModularCourse;

<PageTitle>@Course.DisplayName</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudPaper id="content-paper" Height="100%" Width="100%" Class="pa-sm-16 pa-4 my-4">
        <ButtonPrevious Link="/teaching">
            Back to Teaching.    
        </ButtonPrevious>
        <MudText Typo="Typo.h1" Class="mx-auto">@Course.DisplayName</MudText>
        <MudDivider Class="my-6" DividerType="DividerType.FullWidth" Vertical="false" />
        
        @ChildContent
        
        <MudDivider Class="mt-6 mb-2" DividerType="DividerType.FullWidth" Vertical="false" />
        <ButtonNext Link="@Course.Modules[0].Route">
            Start the course with <Highlight>@Course.Modules[0].DisplayName</Highlight>!
        </ButtonNext>
    </MudPaper>

    <PrismRenderer ContainerId="content-paper"/>
</MudContainer>

@code {
    [Parameter]
    [EditorRequired]
    public Course Course { get; set; } = null!;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;
}
