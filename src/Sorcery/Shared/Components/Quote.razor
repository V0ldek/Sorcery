<MudPaper Elevation="0" Class="my-4 pa-2 d-block" Width="100%" Style="justify-self: right;">
    <blockquote>
        <MudIcon Icon="@Icons.Material.Filled.FormatQuote"></MudIcon> 
        <MudText Inline="true" Class="pl-2">
            <i class="@TextClass">@ChildContent</i>
        </MudText>
    </blockquote>
</MudPaper>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [CascadingParameter]
    protected ThemeInfo? ThemeInfo { get; set; }

    private string TextClass
    {
        get
        {
            if (ThemeInfo is not null && !ThemeInfo.IsDarkMode)
            {
                return "quote-text-light";
            }

            return "quote-text";
        }
    }
}
