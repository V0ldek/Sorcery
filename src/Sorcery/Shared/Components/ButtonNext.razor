<MudGrid Justify="Justify.FlexEnd">
    <MudItem>
        <MudPaper Elevation="5">
            <MudButton StartIcon="@Icons.Filled.DoubleArrow" Size="Size.Large" Variant="Variant.Text" Link="@Link" Class="pa-4">
                <MudText Style="margin-top: 1px" Typo="Typo.button">@ChildContent</MudText>
            </MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    [Parameter]
    [EditorRequired]
    public string Link { get; set; } = null!;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
