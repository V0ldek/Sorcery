[
  {
    "outputFileName": "wwwroot/css/bundled/bundle.min.css",
    "inputFiles": [
      "wwwroot/css/lib/*.css",
      "wwwroot/css/lib/fontawesome/**/*.css",
      "wwwroot/css/app.css"
    ],
    "minify": {
      "enabled": true,
      "commentMode": "hacks",
      "gzip": true,
      "adjustRelativePaths": true
    }
  },
  {
    "outputFileName": "wwwroot/scripts/bundled/bundle.min.js",
    "inputFiles": [
      "wwwroot/scripts/lib/*.js",
      "!wwwroot/scripts/lib/asciinema-player.min.js"
    ],
    "minify": {
      "enabled": true,
      "gzip": true,
      "preserveImportantComments": false
    }
  }
]
